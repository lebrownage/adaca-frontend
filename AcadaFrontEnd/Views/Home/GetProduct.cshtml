@model Acada.FrontEnd.Models.ProductDto

<div class="offset-md-2 col-md-8">
    <div>
        <a href="/" class="btn btn-primary mb-2"> Back to Products Page</a>
    </div>
    <div class="card">
        <div class="card-header">
            <h1>Product Details</h1>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label class="fw-bold">Name</label>
                <input type="text" value="@Model.Name" class="form-control-plaintext" disabled />
            </div>
            <div class="form-group">
                <label class="fw-bold">Description</label>
                <textarea class="form-control-plaintext" disabled>@Model.Description</textarea>
            </div>
            <div class="form-group">
                <label class="fw-bold">Price</label>
                <input type="number" value="@Model.Price" class="form-control-plaintext" disabled />
            </div>
        </div>
    </div>
</div>
